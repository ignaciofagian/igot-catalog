	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Server",
			"runtimeArgs": ["-r", "ts-node/register"],
			"args": ["src/index.ts"],
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"env": {
				"TS_NODE_PROJECT": "tsconfig.json",
				"TS_NODE_TRANSPILE_ONLY": "true"
			}
		}
	]
}
